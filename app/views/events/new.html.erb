<h1>Events#new</h1>
<p>Find me in app/views/events/new.html.erb</p>

<%= form_tag events_path do %>
  <%= label_tag(:name, "Name") %>
  <%= text_field_tag(:name, nil, placeholder: @event_name) %>

  <%= label_tag(:location, "Location") %>
  <%= text_field_tag(:location, nil, placeholder: @event_location) %>

  <%= label_tag(:school_year, "School Year") %>
  <%= text_field_tag(:school_year, nil, placeholder: @placeholder_year) %>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <%= submit_tag("Create student") %>
<% end %>